<!doctype html>
<html>
<head>
  <title>questionlist</title>
</head>
<body>
  <h1>试题列表</h1>
  <p>
    <ul>
      <li><a href='index.html'>主页</a></li>
      <li><a href='addquestion'>添加试题</a></li>
    </ul>
  </p>
  <% var i=1%>
  <% questions.forEach(function(question){%>
  <fieldset>
    <legend>问题 <%=i%></legend>
  <%i++%>
  <p>问题类型:
<%    var type  %>
<%    if(question.questionType == 'selection' ){  %>
<%    type='选择题'    %>
<%    } %>
<%    if(question.questionType == 'fill_blank'){%>
<%    type='填空题'  %>
<%    } %>
<%    if(question.questionType == 'jianda'){%>
<%    type='简答题'%>
<%    } %>

  <%=type%><br />
</p>
  <p><em>问题描述：</em></p>
  <p>&nbsp;&nbsp;&nbsp;
    <pre>
    <%=questionsFile[i-2]%>
  </pre>
  </p>
<table>
  <tr>
    <td>
<!-- delete question. -->
    <form method="post" action="question">
    <button onclick="if(confirm('确认删除问题？')==true){return true;}else{return false;}">删除</button>
    <input type='hidden' id='button' name='questionID' value='<%=question.questionID%>'>
  </form>
</td>
<td>
<!-- modify question. -->
  <form method="get" action='modifyquestion'>
  <button>修改</button>
  <input type='hidden'  name='questionID' value='<%=question.questionID%>'>
</form>
</td>
</tr>
</table>

</fieldset>
  <%})%>
<!-- <script src='/javascripts/confirm.js' type='text/javascript'></script> -->
<script>
function confirmDelete(num){
  alert(confirm('确认删除？'))
}
</script>
</body>
</html>
